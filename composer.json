{
    "name": "mautic/wordpress-plugin",
    "description": "Mautic Wordpress Plugin inserts Mautic tracking image and forms to the WP website. Your Mautic instance will be able to track information about your visitors that way.",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "St√©phane HULARD",
            "email": "s.hulard@chstudio.fr"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^1.0"
    },
    "scripts": {
        "build-readme": "@php dist/readme-builder.php",
        "code-sniffer": [
            "@composer install --no-interaction",
            "./vendor/bin/phpcbf --standard=phpcs.xml",
            "./vendor/bin/phpcs --standard=phpcs.xml"
        ],
        "test": [
            "@composer install --no-interaction",
            "@check-phpunit",
            "./vendor/bin/phpunit"
        ],
        "test-coverage": [
            "@composer install --no-interaction",
            "@check-phpunit",
            "./vendor/bin/phpunit --coverage-html ./tests-coverage"
        ]
    },
    "scripts-descriptions": {
        "build-readme": "Updates the current readme.txt file based on README.md and plugin headers",
        "code-sniffer": "Run phpcbf and phpcs",
        "test-coverage": "Run phpunit with test coverage",
        "test": "Run phpunit tests"
    }
}
